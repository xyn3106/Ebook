<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@drawable/title_background">

        <TextView
            android:id="@+id/My_login"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical" 
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
                android:background="@drawable/login_btn_bg"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="6dp"
                android:layout_marginRight="10dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="15sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="我"
               android:textColor="@color/my_title_textcolor"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:id="@+id/MyMyScroll"
        android:background="#F4F4F4"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                    android:paddingBottom="5dp"
                    android:background="@drawable/more_list_bg">

                <ImageView
                    android:id="@+id/u_portrait"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
        android:scaleType="centerInside"
        android:background="@drawable/list_background_imgbg"
                    android:layout_margin="5dp"
                    android:src="@drawable/icon_emotion" />
                
                <TextView
                    android:id="@+id/u_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/u_portrait"
                    android:text="用户名"
                    android:textColor="#666666"
                    android:textSize="18sp" />
                
                <LinearLayout
                    android:id="@+id/My_messagebtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/u_portrait"
                    android:layout_margin="2dp"
                    android:layout_toRightOf="@+id/u_portrait"
                    android:layout_below="@+id/u_name"
                    android:background="@drawable/message_background"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingRight="5dp" >

                    <ImageView
                        android:id="@+id/My_messageimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:src="@drawable/message_new" />

                    <TextView
                        android:id="@+id/My_messagetxt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="2"
                        android:textSize="11dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/My_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/u_portrait"
                    android:layout_alignTop="@+id/My_messagebtn"
                    android:layout_marginBottom="3dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/My_messagebtn"
                    android:background="@drawable/my_address_background"
                    android:gravity="center_vertical"
                    android:paddingBottom="6dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="8dp"
                    android:paddingTop="6dp"
                    android:text="定位位置：..."
                    android:textColor="#333333"
                    android:textSize="15sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/account_tab_bg"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/My_checkin"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_tab_background"
                    android:gravity="center"
                    android:padding="14dp"
                    android:text="签到"
                    android:textColor="#666666"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/My_comment"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_tab_background"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="菜单"
                    android:textColor="#666666"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/My_photo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="0.5dp"
                    android:layout_weight="1"
                    android:background="@drawable/my_tab_background"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="评价"
                    android:textColor="#666666"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/My_list_tuangou"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/more_list_bg"
                android:paddingLeft="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/my_coupon_user_icon_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="   饭堂"
                    android:textColor="#666666"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/My_list_huiyuanka"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/more_list_bg"
                android:paddingLeft="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/my_card_icon_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="   会员卡"
                    android:textColor="#666666"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/My_list_yuding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/more_list_bg"
                android:paddingLeft="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/my_profile_book_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="   预定"
                    android:textColor="#666666"
                    android:textSize="18sp" />
            </LinearLayout>
 
            <LinearLayout
                android:id="@+id/My_list_menpiao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/more_list_bg"
                android:paddingLeft="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/my_tickets_icon_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="   支付"
                    android:textColor="#666666"
                    android:textSize="18sp" />
            </LinearLayout>
<!--
            <LinearLayout
                android:id="@+id/My_list_jiudian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/my_tab_background"
                android:paddingBottom="0dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/my_list_txt_background"
                    android:drawableLeft="@drawable/my_hotel_icon_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingLeft="15dp"
                    android:paddingTop="8dp"
                    android:text="   酒店"
                    android:textColor="#666666"
                    android:textSize="18sp" />

            </LinearLayout>
 -->

            <LinearLayout
                android:id="@+id/My_list_caogao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/more_list_bg"
                android:paddingLeft="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/my_draft_icon_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="   评分"
                    android:textColor="#666666"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/My_list_shanghuhushoucang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/more_list_bg"
                android:paddingLeft="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/my_favorite_icon_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="   美食收藏"
                    android:textColor="#666666"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/My_list_tuangoushoucang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/more_list_bg"
                    android:paddingLeft="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/my_tuan_fav_icon_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="   饭堂收藏"
                    android:textColor="#666666"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/My_list_guanzhu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/more_list_bg"
                android:paddingLeft="15dp" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/my_focus_icon_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="   关注"
                    android:textColor="#666666"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/My_list_fensi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/more_list_bg"
                    android:layout_marginBottom="10dp"
                android:paddingLeft="15dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/my_fans_icon_press"
                    android:gravity="center_vertical"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="   粉丝"
                    android:textColor="#666666"
                    android:textSize="18sp" />
                
            </LinearLayout>

        </LinearLayout>
        
    </ScrollView>

</LinearLayout>